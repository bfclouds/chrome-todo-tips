{
  "name": "todo提醒",
  "description": "每天提醒我写todo",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "main.js"
  },
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "permissions": ["storage", "activeTab", "notifications"],
  "chrome_url_overrides": {
  }
}
